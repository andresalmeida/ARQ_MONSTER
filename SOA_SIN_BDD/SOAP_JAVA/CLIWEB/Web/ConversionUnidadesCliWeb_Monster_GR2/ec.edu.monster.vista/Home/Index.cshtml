@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-image: url('/images/conversor.png');
        background-size: auto;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        font-family: 'KG Primary Penmanship', cursive;
    }

    input, select {
        color: #38b6ff;
        border: 2px solid rgba(56, 182, 255, 0.3) !important;
        background: rgba(255, 255, 255, 0.1) !important;
        font-size: 2em !important;
        padding: 15px 20px !important;
        margin: 20px 0;
    }

    .btn-primary {
        background: rgba(255, 145, 77, 0.7) !important;
        border: 2px solid #ff914d !important;
        color: white !important;
        font-size: 2em !important;
        padding: 20px 40px !important;
        border-radius: 8px !important;
        width: 100%;
    }
</style>

<link href="https://fonts.cdnfonts.com/css/kg-primary-penmanship" rel="stylesheet">

<!-- Botón de salir superior derecho -->
<a href="/Home" style="position: absolute; top: 20px; right: 20px; padding: 15px 25px; background: rgba(255, 145, 77, 0.7); color: white; border: 2px solid #ff914d; border-radius: 8px; font-size: 1.5em; text-decoration: none;">
    Salir
</a>

<form asp-action="Convertir" method="post">

    <div class="form-group" style="margin: 0 0 110px 0; position: relative;">
        <input type="number"
               class="form-control"
               id="valor"
               name="valor"
               required
               style="width: 15%;
                   padding: 10px;
                   position: relative;
                   left: 65%;
                   transform: translateX(-50%);
                   color: #38b6ff;
                   font-size: 20em;
                   font-family: 'KG Primary Penmanship', cursive;
                   letter-spacing: 1.5px;">
    </div>

    <!-- Botones -->
    <div style="position: relative;
            margin: 425px 0 0 -58px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 20px;">

        <!-- Botón Ingresar (izquierda) -->
        <button type="submit"
                name="tipoConversion"
                value="pulgadasACentimetros"
                style="padding: 25px 165px;
                   background: #38b6ff;
                   color: white;
                   border: 2px solid #38b6ff;
                   border-radius: 10px;
                   font-size: 3em;
                   font-family: 'KG Primary Penmanship', cursive;
                   font-weight: bold;
                   transition: all 0.3s ease;
                   margin-left: -170px;">
            <!-- Margen izquierdo -->
            IN a CM
        </button>

        <button type="submit"
                name="tipoConversion"
                value="centimetrosAPulgadas"
                style="padding: 25px 165px;
                   background: #38b6ff;
                   color: white;
                   border: 2px solid #38b6ff;
                   border-radius: 10px;
                   font-size: 3em;
                   font-family: 'KG Primary Penmanship', cursive;
                   font-weight: bold;
                   transition: all 0.3s ease;
                   margin-right: 365px;">
            <!-- Margen izquierdo -->
            CM a IN
        </button>

    </div>

</form>

@if (ViewBag.Resultado != null)
{
    <div style="margin: 150px 0 50px 0; position: relative;">
        <input type="text"
               class="result-input"
               value="@if(ViewBag.TipoConversion == "pulgadasACentimetros"){
                        @($"{ViewBag.Resultado} centímetros")
                     } else {
                        @($"{ViewBag.Resultado} pulgadas")
                     }"
               readonly>
    </div>

}

@if (ViewBag.Error != null)
{
    <div style="margin-top: 40px; padding: 20px; background: rgba(255, 77, 77, 0.1); border-radius: 10px;">
        <p style="color: #ff4d4d; font-size: 2em;">
            <strong>Error:</strong> @ViewBag.Error
        </p>
    </div>
}
