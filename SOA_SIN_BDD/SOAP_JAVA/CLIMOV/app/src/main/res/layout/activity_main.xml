<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Fondo con imagen -->

    <!-- Contenedor principal -->

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="435dp"
        android:layout_height="866dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/login" />

    <LinearLayout
        android:layout_width="195dp"
        android:layout_height="63dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="120dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.218">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:textColorHint="#38b6ff"
            android:hint="Usuario">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/txtUsuario"
                android:textStyle="italic"
                android:textColor="#38b6ff"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="155dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="465dp"
        android:layout_marginStart="160dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.449">

        <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:textColorHint="#38b6ff"
            android:textStyle="italic"
            android:hint="ContraseÃ±a"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#38b6ff">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/txtContrasenia"
                android:textColor="#38b6ff"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="385dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.945">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="136dp"
            android:layout_height="43dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_transparent_border" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="200dp"
        android:orientation="horizontal"
        android:layout_marginBottom="385dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.945">

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="138dp"
            android:layout_height="43dp"
            android:background="@drawable/btn_transparent_border" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>