@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Login - Monsters Inc</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Comic Sans MS', cursive, sans-serif;
            background: linear-gradient(135deg, #8EE3EF, #A281D7);
            background-image: url('https://i.gifer.com/4uxC.gif'); /* fondo Sulley */
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .monster-login {
            background-color: rgba(0, 0, 0, 0.6);
            padding: 40px;
            border-radius: 25px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
            width: 100%;
            max-width: 420px;
            color: #fff;
        }

        h1 {
            text-align: center;
            font-size: 2.2rem;
            margin-bottom: 25px;
            color: #FFD700;
            text-shadow: 2px 2px #000;
        }

        label {
            color: #eee;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #5D9CEC;
            border: none;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #4A89DC;
            }

        .alert-danger {
            background-color: #e74c3c;
            border: none;
            text-align: center;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="monster-login">
        <h1>🔐 CONVERSIÓN UNIDADES MONSTER G02</h1>

        @if (ViewBag.LoginError != null)
        {
            <div class="alert alert-danger">
                @ViewBag.LoginError
            </div>
        }

        <form action="/Home/Login" method="post">
            <div class="mb-3">
                <label for="username">👾 Usuario:</label>
                <input type="text" class="form-control" name="username" id="username" required />
            </div>

            <div class="mb-3">
                <label for="password">🔐 Contraseña:</label>
                <input type="password" class="form-control" name="password" id="password" required />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Entrar al Mundo Monster 🚪</button>
            </div>
        </form>
    </div>
</body>
</html>
